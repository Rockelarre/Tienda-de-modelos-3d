@model App_Tienda.Models.InboundUser
@{
	ViewData["Title"] = "Registro";
}

<div class="d-flex justify-content-center p-5">
	<div style="width: 80%">
		<h1>@ViewData["Title"]</h1>

		<div class="row">
			<div class="col-md-4">
				<form id="registerForm">
					<h2>Crea una nueva cuenta.</h2>
					<hr />
					<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
					<div class="form-floating mb-3">
						<input id="nombre" asp-for="Nombre" class="form-control" autocomplete="Nombre" aria-required="true" placeholder="Daniel" />
						<label asp-for="Nombre">Nombre</label>
						@*<span asp-validation-for="Nombre" class="text-danger"></span>*@
					</div>
					<div class="form-floating mb-3">
						<input id="primerapellido" asp-for="PrimerApellido" class="form-control" autocomplete="PrimerApellido" aria-required="true" placeholder="Vega" />
						<label asp-for="PrimerApellido">Primer Apellido</label>
						@*<span asp-validation-for="PrimerApellido" class="text-danger"></span>*@
					</div>
					<div class="form-floating mb-3">
						<input id="segundoapellido" asp-for="SegundoApellido" class="form-control" autocomplete="SegundoApellido" aria-required="true" placeholder="Caro" />
						<label asp-for="SegundoApellido">Segundo Apellido</label>
						@*<span asp-validation-for="SegundoApellido" class="text-danger"></span>*@
					</div>
					<div class="form-floating mb-3">
						<input id="email" asp-for="Email" class="form-control" autocomplete="Email" aria-required="true" placeholder="name@example.com" />
						<label asp-for="Email">Email</label>
						@*<span asp-validation-for="Email" class="text-danger"></span>*@
					</div>
					<div class="form-floating mb-3">
						<input id="password" type="password" asp-for="Password" class="form-control" autocomplete="Password" aria-required="true" placeholder="password" />
						<label asp-for="Password">Password</label>
						@*<span asp-validation-for="Password" class="text-danger"></span>*@
					</div>
					<div class="form-floating mb-3">
						<input id="confirmpassword" type="password" asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
						<label asp-for="ConfirmPassword">Confirm Password</label>
						@*<span asp-validation-for="ConfirmPassword" class="text-danger"></span>*@
					</div>
					<button id="" onclick="Register(event)" class="w-100 btn btn-lg btn-primary">Register</button>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
